@model List<CasaStark.Models.Miembros>

@{
    ViewData["Title"] = "Lista de Miembros de Casa Stark";
}

<style>
    
    .grid-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #2c3e50; 
        color: #ecf0f1; 
    }

    .grid-table th, .grid-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #34495e;
    }

    .grid-table th {
        background-color: #34495e; 
        font-weight: bold;
    }

    .grid-table tr:hover {
        background-color: #3b4a5a; 
    }

 
    .grid-container {
        padding: 20px;
        background-color: #1c2833; 
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>


<div class="grid-container">
    <h2>Lista de Miembros</h2>
    <table class="grid-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Habilidad</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var miembros in Model)
            {
                <tr>
                    <td>@miembros.Id</td>
                    <td>@miembros.Nombre</td>
                    <td>@miembros.Habilidad</td>
                    <td>@miembros.Rol</td>
                </tr>
            }
        </tbody>
    </table>
</div>
